import os
import cv2
import json
import random
import numpy as np
import pandas as pd
from pathlib import Path
from PIL import Image

# Household object classes
CLASSES = ["mug", "plate", "bowl", "bottle", "spoon", "fork", "knife", "pan", "glass"]

# Backgrounds folder (real kitchen/household photos)
BACKGROUND_DIR = "backgrounds/"
OUTPUT_DIR = "synthetic_dataset/"
os.makedirs(OUTPUT_DIR, exist_ok=True)

def generate_random_object(class_name, img_size=(480,640)):
    """
    Generate synthetic object placeholder.
    Replace with 3D renderings or textured icons for realism.
    """
    h, w = img_size
    x1, y1 = random.randint(50, w//2), random.randint(50, h//2)
    x2, y2 = x1 + random.randint(40,120), y1 + random.randint(40,120)
    box = [x1, y1, x2, y2]
    return box

def generate_scene(scene_id, num_objects=3):
    # Load random background
    bg_files = os.listdir(BACKGROUND_DIR)
    bg_path = os.path.join(BACKGROUND_DIR, random.choice(bg_files))
    bg = cv2.imread(bg_path)
    bg = cv2.resize(bg, (640,480))

    annotations = []
    metadata = []

    for i in range(num_objects):
        cls = random.choice(CLASSES)
        box = generate_random_object(cls)
        annotations.append({"class": cls, "bbox": box})

        # Assign synthetic dimensions (cm)
        width_cm = random.uniform(5,15)
        height_cm = random.uniform(5,20)
        volume_cm3 = width_cm * height_cm * random.uniform(2,5)

        metadata.append({
            "image_id": f"scene_{scene_id}.jpg",
            "class": cls,
            "width": width_cm,
            "height": height_cm,
            "volume": volume_cm3,
            "bbox": box
        })

        # Draw bounding box for visualization
        cv2.rectangle(bg, (box[0], box[1]), (box[2], box[3]), (0,255,0), 2)
        cv2.putText(bg, cls, (box[0], box[1]-5), cv2.FONT_HERSHEY_SIMPLEX, 0.5, (0,255,0), 1)

    # Add reference object (credit card)
    ref_box = [20, 400, 100, 460]
    cv2.rectangle(bg, (ref_box[0], ref_box[1]), (ref_box[2], ref_box[3]), (255,0,0), 2)
    annotations.append({"class": "reference_card", "bbox": ref_box})

    # Save image
    img_path = os.path.join(OUTPUT_DIR, f"scene_{scene_id}.jpg")
    cv2.imwrite(img_path, bg)

    return annotations, metadata

def main(num_scenes=50):
    all_annotations = []
    all_metadata = []

    for i in range(num_scenes):
        ann, meta = generate_scene(i, num_objects=random.randint(2,5))
        all_annotations.extend(ann)
        all_metadata.extend(meta)

    # Save COCO-style annotations
    with open(os.path.join(OUTPUT_DIR, "annotations.json"), "w") as f:
        json.dump(all_annotations, f, indent=4)

    # Save metadata.csv
    df = pd.DataFrame(all_metadata)
    df.to_csv(os.path.join(OUTPUT_DIR, "metadata.csv"), index=False)

    print(f"âœ… Generated {num_scenes} synthetic scenes in {OUTPUT_DIR}")

if __name__ == "__main__":
    main(num_scenes=100)
